<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_add_product"
    app:cardElevation="4dp"
    app:cardCornerRadius="28dp"
    app:cardBackgroundColor="#FCFCFC">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    <ImageView
        android:id="@+id/edit_item_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_gallery"/>
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_item_image"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:text="@string/title"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/edit_text_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_title"
        android:textColor="@color/black"
        android:textSize="24sp"
        />
        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_item_title"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:text="@string/description"
            android:textColor="@color/black"
            />
    <EditText
        android:id="@+id/edit_text_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_description"
        android:textColor="@color/black"
        android:textSize="24sp"
        />
        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_item_description"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:text="@string/price"
            android:textColor="@color/black"/>
        <EditText
        android:id="@+id/edit_text_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_price"
            android:textColor="@color/black"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/text_view_item_arrivalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_item_price"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:text="@string/arrival_time"
            android:textColor="@color/black"
            />
    <EditText
        android:id="@+id/edit_text_item_arrivalTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_item_arrivalTime"
        android:textColor="@color/black"
        android:textSize="24sp"   />
        <TextView
            android:id="@+id/text_view_item_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_item_arrivalTime"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:text="@string/rating"
            android:textColor="@color/black"
            />
    <EditText
        android:id="@+id/edit_text_item_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_item_rating"
        android:textColor="@color/black"
        android:textSize="24sp"
        />
        <TextView
            android:id="@+id/text_view_item_grediants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_item_rating"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:text="@string/grediants"
            android:textColor="@color/black"
            />
    <EditText
        android:id="@+id/edit_text_item_grediants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_item_grediants"
        android:textColor="@color/black"
        android:textSize="24sp"
        />
        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:background="@drawable/button_selector"
            android:layout_below="@+id/edit_text_item_grediants"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>